type buffer = @FPU_AUDIO_BUFFER_TYPE@
type t = buffer

val create : int -> t

(** Make a blank buffer. *)
val make : int -> t

(** Length in samples. *)
val length : t -> int

val copy : t -> t

val sub : t -> int -> int -> t

val blit : t -> int -> t -> int -> int -> unit

val clear : t -> int -> int -> unit

(** Effects *)

val gain_sample : float -> t -> int -> unit

val gain : float -> t -> int -> int -> unit

val add : t -> int -> t -> int -> int -> unit

val rms : t -> int -> int -> float

val resample : ?mode:[ `Linear | `Nearest ] -> float -> t -> int -> int -> t

(** Conversion *)

val to_s16le : t array -> int -> int -> string

val of_u8 : string -> int -> buffer array -> int -> int -> unit

val of_s16le : string -> int -> buffer array -> int -> int -> unit
